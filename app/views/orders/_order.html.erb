<table>
  <tr>
    <th>Order Id</th>
    <th>Product
    <th>Price
    <th>Customer</th>
  </tr>
  <tr>
    <% order.products.each do |product| %>
      <tr>
        <td><%= order.id %></td>

        <td><%= product.price %></td>

        <%= render(order.invoice) || "No Invoice" %>
      </tr>
    <% end %>

  </tr>
</table>
